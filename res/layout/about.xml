<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="10dp">

    <TextView android:id="@+id/aboutUrl" android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/about_paldin" android:gravity="center_horizontal"/>

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center_horizontal"
              android:text="@string/about_memo"
              android:textAppearance="?android:attr/textAppearanceLarge"/>

    <ImageView android:id="@+id/aboutImage" android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/about_info"/>

</LinearLayout>