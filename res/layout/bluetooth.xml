<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <TextView   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/bt_devices"/>
        <Button android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/bt_search"
                android:onClick="searchDevices"
                android:layout_gravity="center"/>
        <TableLayout android:layout_width="wrap_content"
                     android:layout_height="wrap_content" android:id="@+id/btDevices"/>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <TextView   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:id="@+id/bt_device"/>
        <Button android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/bt_disconnect"
                android:onClick="disconnect"
                android:layout_gravity="center"/>
    </LinearLayout>



</LinearLayout>