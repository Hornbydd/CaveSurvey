<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:layout_margin="10dp">
                  
        <TextView android:layout_height="wrap_content"
                  android:layout_width="0dp"
                  android:layout_weight="1" 
                  android:text="@string/azimuth_column"/>
        
	    <TextView android:id="@+id/azimuth_value"
	              android:layout_height="wrap_content"
	              android:layout_width="0dp"
	              android:layout_weight="1"
	              android:text="@string/no_value_label"
	              android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:layout_margin="10dp">
        <TextView android:layout_height="wrap_content"
                  android:layout_width="0dp"
                  android:layout_weight="1" 
                  android:text="@string/accuracy_column"/>
        <TextView android:id="@+id/azimuth_accuracy"
                  android:layout_height="wrap_content"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="@string/no_value_label"
                  android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_margin="10dp">
        <ProgressBar android:id="@+id/azimuth_progress"
            android:progress="0"
            android:max="3"
            android:layout_height="5dp"
            android:layout_width="fill_parent"
            android:maxHeight="2dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_margin="10dp"/>
    </LinearLayout>

</LinearLayout>